
.mdl-textfield__input
  border: 2px solid #d5d7d8;
  display: inline-block;
  font-size: 16px;
  margin: 15px auto 0 auto;
  padding: 10px 20px;
  width: 260px;
  text-align: left;
  color: inherit;
  border-radius: 3px;
  background: #f9fafa;

  &:focus
    outline: none;
    border-color: #28a8d3
    background: #fff

#local-search-result 
  position: absolute;
  left: 50%;
  margin-top: 5px;
  margin-left: -150px;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
  z-index: 6;
  width: 300px;
  max-height: 400px;
  overflow-y: auto;
  display: none;
  a
    text-decoration: none;
    color: #079fd2;
    text-transform: capitalize;
  ul
    list-style: none;
    padding: 0;
    li
      padding: 5px 10px;
      border-top: 1px solid #dadada;
      text-align: left;
      &:last-child
        border-bottom: 1px solid #dadada;
      p
        margin: 0;
        max-height: 45px;
        overflow: hidden;
        color: #333;

.search-keyword
  color: #e32d40




