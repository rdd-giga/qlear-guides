
.mdl-textfield__input
  border: 0;
  border-bottom: 1px solid rgba(0,0,0,.12);
  display: inline-block;
  font-size: 16px;
  margin: 15px auto 0 auto;
  padding: 4px 0;
  width: 300px;
  text-align: left;
  color: inherit;
  border-radius: 2px;
  &:focus
    outline: none;

#local-search-result 
  position: absolute;
  left: 50%;
  margin-left: -150px;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
  z-index: 6;
  max-width: 300px;
  max-height: 500px;
  overflow-y: auto;
  a
    text-decoration: none;
    color: #079fd2;
  ul
    list-style: none;
    padding: 0;
    li
      padding: 10px 20px;
      border-top: 1px solid #dadada;
      p
        margin: 0;
        max-height: 50px;
        overflow: hidden;
        color: #333;






